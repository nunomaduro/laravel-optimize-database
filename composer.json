{
    "name": "nunomaduro/laravel-optimize-database",
    "description": "Publishes migrations that make your database production ready.",
    "keywords": ["laravel", "database", "optimization", "migrations"],
    "license": "MIT",
    "authors": [
        {
            "name": "Nuno Maduro",
            "email": "enunomaduro@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.17.0",
        "phpstan/phpstan": "^1.11.8",
        "rector/rector": "^1.2.2",
        "symfony/var-dumper": "^7.1.3",
        "laravel/framework": "^11.18.1"
    },
    "autoload": {
        "psr-4": {
            "NunoMaduro\\LaravelOptimizeDatabase\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "NunoMaduro\\LaravelOptimizeDatabase\\LaravelOptimizeDatabaseServiceProvider"
            ]
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types"
        ]
    }
}
